<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.LoginActivity">

    <EditText
        android:id="@+id/loginActivity_mail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email" />

    <EditText
        android:id="@+id/loginActivity_password"
        android:layout_below="@+id/nombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:hint="Password"/>

    <Button
        android:id="@+id/loginActivity_login"
        android:text="LOGIN"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/loginActivity_register"
        android:text="REGISTER"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="120dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.facebook.login.widget.LoginButton
        android:id="@+id/login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="180dp"
        android:layout_marginBottom="50dp" />

    <TextView
        android:id="@+id/loginActivity_sinRegister"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="Ingresar Sin Registrarse"
        android:layout_gravity="center_horizontal"
        android:textSize="20dp"
        android:layout_marginTop="220dp"/>

</FrameLayout>