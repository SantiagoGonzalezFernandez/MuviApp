<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/FragmentLista_RelativeLayout_Lista"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:background="@color/colorPrimary2"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/FragmentLista_TextView_Popular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="7dp"
        android:text="Watchlist"
        android:textColor="@color/colorPrimary"
        android:textAllCaps="true"
        android:textSize="20sp" />

    <com.takusemba.multisnaprecyclerview.MultiSnapRecyclerView
        android:id="@+id/FragmentLista_MultiSnapRecyclerView_ListMovie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:layout_below="@id/FragmentLista_TextView_Popular"
        android:orientation="horizontal"
        app:msrv_gravity="start"
        app:msrv_ms_per_inch="100"
        app:msrv_snap_count="3" />
</RelativeLayout>